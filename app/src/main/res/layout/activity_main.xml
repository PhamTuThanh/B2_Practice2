<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00877A"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#00877A"
        android:padding="5dp"
        android:text="Practice2"
        android:textColor="#FFFFFF" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#056A60">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="190dp"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:text="Chọn dịch vụ"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="60dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="multiply"
                android:onClick="exit"
                android:tag="View"
                android:text="THOÁT"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#00877A"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/git_i" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView5"
                    android:text="Giặt ủi"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="49dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-40dp">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/kh_ch_sn" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView6"
                    android:text="Khách sạn"
                    android:layout_marginTop="-2dp"
                    android:layout_marginRight="80dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#00877A"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/taxi" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView8"
                    android:text="Taxi"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="59dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-50dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="18dp"
                    app:srcCompat="@drawable/thc_n_nhanh" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView7"
                    android:text="Thức ăn nhanh"
                    android:layout_marginTop="-2dp"
                    android:layout_marginRight="70dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#00877A"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="15dp"
                    />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView9"
                    android:text=""
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="59dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-50dp">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/vn_chuyn" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView10"
                    android:text="Vận chuyển"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
            </RelativeLayout>

        </TableRow>

    </TableLayout>


</LinearLayout>